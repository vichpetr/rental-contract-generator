VITE_PORTAL_URL=https://home-portal.apps.petrvich.eu/
VITE_SUPABASE_URL=your_project_url
VITE_SUPABASE_ANON_KEY=your_anon_key

# Set to 'true' if running standalone (npm run dev) to keep session on reload.
# Set to 'false' (default) if running embedded in Portal to avoid conflicts.
VITE_SUPABASE_PERSIST_SESSION=false

# CORS Configuration
# Comma-separated list of allowed origins. Use /regex/ for regular expressions.
# Default if unset: /^https?:\/\/.*\.apps\.petrvich\.eu$/, /^http:\/\/localhost(:\d+)?$/
VITE_CORS_ALLOWED_ORIGINS=/^https?:\/\/.*\.apps\.petrvich\.eu$/,/^http:\/\/localhost(:\d+)?$/
